<body>
    <div class="mynav" id="NAV">


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">TutorFirst</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ml-auto">
          <a class="nav-item nav-link" href="#"></a>
          <a class="nav-item nav-link" href="#NAV">Login</a>
    
        </div>
      </div>
    </nav>
    </div>
    <div class="container" id="LOGIN">
      <div class="card1">
        <button id="student" onclick="student();" class="btn current-btn">Student</button>
        <button id="tutor" onclick="tutor();" class="btn btn-light">Tutor</button>
        <% if (message.length > 0) { %>
            <% if (message == "Account successfully created. Please login" || message == 'You have successfully logged out.') { %>
              <div class="alert alert-success">
                <%= message %>
              </div>
            <% } else { %>
                <div class="alert alert-danger">
                  <%= message %>
                </div>
            <% } %>
            <% } %>
        <div class="student-div">
            <h1>Student</h1>
            <h2>Login</h2>
        <form action="/loginS" method="POST">
            <label for="" >Email</label>
            <input name="studentEmail" type="text">
            <label for="">Password</label>
            <input name="studentPass" type="password" name="" class="passId">
            <button class="register-btn btn btn-light">Login</button>
        </form>
            <button onclick="registerS();" class="register-btn btn btn-light">Register</button>
            
            <hr>
            <div style="display: none;" class="register-s">
                <h2>Register</h2>
            <form action="/registerS" method="POST">
                <label for="">First Name</label>
                <input name="studentFirst" type="text" name="" id="" required>

                <label for="">Last Name</label>
                <input name="studentLast" type="text" name="" id="" required>

                <label for="">Email Address</label>
                <input name="studentEmail" type="email" name="" id="" required>

                <label for="">Password</label>
                <input name="studentPass" type="password" name="" id="" required>

                <label for="">Number of Family Members (2-5)</label>
                <input name="fam" type="text" name="" id="" required>

                <label for="">Family Income</label>
                <input name="income" type="text" name="" id="" required>
                <button type="submit" class="register-btn btn btn-light">Register</button>
            </form>
            </div>
        </div>

        

        <div class="tutor-div" style="display: none;">
            <h1>Tutor</h1>
            <h2>Login</h2>
        <form action="/loginT" method="POST">
            <label for="" >Email</label>
            <input name="tutorEmail" type="text">

            <label for="" >Password</label>
            <input name="tutorPass" type="password" name="" class="passId">
            <button class="register-btn btn btn-light">Login</button>
        </form>
            <button onclick="registerT();" class="register-btn btn btn-light">Register</button>
            <hr>
            <div style="display: none;" class="register-t">
                <h2>Register</h2>
            <form action="/registerT" method="POST">
                <label for="">First Name</label>
                <input name="tutorFirst" type="text" name="" id="" required>

                <label for="">Last Name</label>
                <input name="tutorLast" type="text" name="" id="" required>

                <label for="">Email Address</label>
                <input name="tutorEmail" type="email" name="" id="" required>

                <label for="">Password</label>
                <input name="tutorPass" type="password" name="" id="" required>

                <button type="submit" class="register-btn btn btn-light">Register</button>
            </form>
            </div>
        </div>

      </div>      
    </div>

    <div class="container-fluid mission-container">
