        <div class="container-fluid footer-container">
            <div class="inner">
                <p style="text-align: center;">&copy; 2020 TutorFirst. All Rights Reserved</p>
            </div>
        </div>
    </footer>
   <script>
       function student(){
        document.getElementById("tutor").classList.remove("current-btn")
        document.getElementById("student").classList.remove("btn-light")
        document.getElementById("tutor").classList.add("btn-light")
        document.getElementById("student").classList.add("current-btn")

        document.querySelector(".tutor-div").style.display = "none"
        document.querySelector(".student-div").style.display = "block";

        var regDiv = document.querySelector(".register-t");
        regDiv.style.display = "none";
        var post = document.querySelector(".card1");
        post.style.height = "370px";
       }
       function tutor(){
        document.getElementById("student").classList.remove("current-btn")
        document.getElementById("tutor").classList.remove("btn-light")
        document.getElementById("student").classList.add("btn-light")
        document.getElementById("tutor").classList.add("current-btn")
        document.querySelector(".student-div").style.display = "none"
        document.querySelector(".tutor-div").style.display = "block";
        
        var regDiv = document.querySelector(".register-s");
        regDiv.style.display = "none";
        var post = document.querySelector(".card1");
        post.style.height = "370px";
       }

       function registerS(){
           var regDiv = document.querySelector(".register-s");
           regDiv.style.display = "block";
           var post = document.querySelector(".card1");
           post.style.height = "870px";
        }

        function registerT(){
           var regDiv = document.querySelector(".register-t");
           regDiv.style.display = "block";
           var post = document.querySelector(".card1");
           post.style.height = "750px";
        }
   </script>

